<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dungeon.mapper.UserMapper">
    
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.dungeon.entity.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
        <result column="deleted" property="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, username, email, password, created_at, updated_at, deleted
    </sql>

    <!-- 示例：根据用户名查询用户（自定义SQL） -->
    <select id="selectByUsername" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM users
        WHERE username = #{username}
        AND deleted = 0
    </select>

    <!-- 示例：根据邮箱查询用户 -->
    <select id="selectByEmail" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM users
        WHERE email = #{email}
        AND deleted = 0
    </select>

    <!-- 示例：统计用户总数 -->
    <select id="countUsers" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM users
        WHERE deleted = 0
    </select>

    <!-- 示例：更新用户最后登录时间（如果需要） -->
    <update id="updateLastLoginTime">
        UPDATE users
        SET updated_at = NOW()
        WHERE id = #{id}
        AND deleted = 0
    </update>

</mapper>

