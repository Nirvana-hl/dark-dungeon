      "parameters": {
        "functionCode": "const required = [\"playerId\",\"characterId\",\"runId\",\"enemyId\",\"actionType\"]; const body = items[0].json; const missing = required.filter(k => body[k] === undefined || body[k] === null);\nif (missing.length) { throw new Error(\"Missing fields: \" + missing.join(\", \")); }\n// Normalize action payload\nbody.actionPayload = body.actionPayload || {}; return [{ json: body }];"
      },
