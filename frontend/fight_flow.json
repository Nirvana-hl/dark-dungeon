    {
      "parameters": {
        "functionCode": "// Merge fetched data and compute one turn resolution\nconst input = $json; const char = items[0].json[0] || null; const enemy = $items(\"FetchEnemy\", 0, 0).json[0] || null; if (!char || !enemy) { throw new Error(\"Character or Enemy not found\"); }\n// Basic checks (mana, cooldown, etc.)\nconst action = input.actionType;\nconst payload = input.actionPayload || {};\nconst result = { playerId: input.playerId, runId: input.runId, characterId: input.characterId, enemyId: input.enemyId, actionType: action };\n// Simple damage model (placeholder):\n// damage = atk * (1 + critChance*critMultiplier) - enemy.defense; clamp >= 0\nconst rng = Math.random();\nconst atk = (char.attack || 10) + (payload.attackBonus || 0);\nconst critChance = Math.min(Math.max((char.critChance || 0.1) + (payload.critChanceBonus || 0), 0), 1);\nconst critMultiplier = (char.critMultiplier || 1.5);\nconst isCrit = rng < critChance;\nlet damage = Math.max(Math.floor(atk * (isCrit ? critMultiplier : 1)) - Math.floor(enemy.defense || 0), 0);\n// Skill modifier\nif (action === \"skill\" && payload.skillPower) { damage = Math.max(Math.floor(damage * payload.skillPower), 0); }\n// Item usage effect\nlet heal = 0; if (action === \"item\" && payload.healAmount) { heal = Math.max(parseInt(payload.healAmount, 10) || 0, 0); }\n// Apply HP changes\nconst enemyHpAfter = Math.max((enemy.hp || 100) - damage, 0);\nconst charHpAfter = Math.min((char.hp || 100) + heal, (char.hpMax || 100));\n// Build updates\nresult.damage = damage; result.isCrit = isCrit; result.heal = heal; result.characterBefore = { hp: char.hp, mana: char.mana }; result.enemyBefore = { hp: enemy.hp }; result.characterAfter = { hp: charHpAfter, mana: char.mana }; result.enemyAfter = { hp: enemyHpAfter };\n// Outcome\nresult.outcome = enemyHpAfter <= 0 ? \"enemy_defeated\" : \"ongoing\";\n// Timestamp\nresult.timestamp = new Date().toISOString();\nreturn [{ json: result }];"
      },
