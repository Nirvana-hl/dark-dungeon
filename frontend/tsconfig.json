{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "pages/**/*",
    "components/**/*",
    "api/**/*",
    "stores/**/*",
    "utils/**/*",
    "types/**/*",
    "plugins/**/*",
    "styles/**/*",
    "manifest.json",
    "pages.json",
    "*.ts",
    "*.vue"
  ]
}